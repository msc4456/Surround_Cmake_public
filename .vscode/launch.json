{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Surroundview_sim",//此处默认为${workspaceFolder}指向工作空间 需要添加到可执行文件的绝对路径
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/bin/", //定义终端输入位置，默认是${workspaceFolder}，会导致main中的文件路径出现问题
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}